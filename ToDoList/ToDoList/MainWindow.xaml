<Window x:Class="ToDoList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <TextBox x:Name="NewItemDescription" Height="23" TextWrapping="Wrap" Text="TextBox"/>
        <Button Content="Button" Height="100" Width="75" Click="Button_Click"/>
        <ListView HorizontalAlignment="Left" Height="299" Margin="10,10,0,0" VerticalAlignment="Top" Width="497" ItemsSource="{Binding Items}" DisplayMemberPath="Description"/>


    </StackPanel>
</Window>
