<Window x:Class="ToDoList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <TextBox x:Name="NewItemDescription" Height="23" TextWrapping="Wrap" Text="To Do Item"/>
        <Button Content="Add" Height="44" Click="Button_Click" Margin="221,0,251,0"/>
        <Button Content="Delete" Height="36" Click="DeleteButton_Click" Margin="221,0,231,0"/>
        <ListView x:Name="ListOfToDoItems" HorizontalAlignment="Left" Height="131" Margin="10,10,0,0" VerticalAlignment="Top" Width="297" ItemsSource="{Binding Items}" DisplayMemberPath="Description"/>


    </StackPanel>


</Window>
